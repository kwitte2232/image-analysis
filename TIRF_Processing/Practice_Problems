
def three_n_plus_one(i, j):


    for digit in range(i, j+1):
        all_count = get_to_one(digit)


def get_to_one(digit):

    if digit == 1:
        count = 1
        return count

    elif digit % 2 == 1:
        digit = 3 * digit + 1
        count = get_to_one(digit)

    elif digit % 2 == 0:
        digit = digit/2
        count = get_to_one(digit)

    return count
